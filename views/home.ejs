<%- include("templates/header") %>
    <% if(!session.authenticated){ %>
        <div class="d-flex gap-2 justify-content-center py-5">
            <form action='/login' method='get'>
                <button class="btn btn-primary d-inline-flex align-items-center" type="submit">
                    Login
                    <svg class="bi ms-1" width="20" height="20">
                        <use xlink:href="#arrow-right-short"></use>
                    </svg>
                </button>
            </form>
            <form action='/signup' method='get'>
                <button class="btn btn-outline-secondary d-inline-flex align-items-center" type="submit">
                    Sign Up
                    <svg class="bi ms-1" width="20" height="20">
                        <use xlink:href="#arrow-right-short"></use>
                    </svg>
                </button>
            </form>
        </div>
        <% } else { %>
            <p>Hello, <%=session.username %></p>
            <p>
            <form action='/members' method='get'><button>Go to members area</button></form>
            </p>
            <p>
            <form action='/logout' method='get'><button>Log out</button></form>
            </p>
            <% } %>
<%- include("templates/footer") %>